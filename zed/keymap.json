[
  {
    // 1. Desde el Editor (Modo Normal): Espacio + h abre el panel
    "context": "VimControl",
    "bindings": {
      "space h": "project_panel::ToggleFocus",
      // Muestra el error/documentaci贸n (Hover) con g + L
      "g l": "editor::Hover"
    }
  },
  {
    // 2. Dentro del Panel de Archivos
    "context": "ProjectPanel && not_editing",
    "bindings": {
      // Espacio + h para cerrar el panel y volver al c贸digo
      "space h": "project_panel::ToggleFocus",

      // --- Gesti贸n de archivos (Estilo LazyVim/Neo-tree) ---
      "a": "project_panel::NewFile", // Crear archivo
      "shift-a": "project_panel::NewDirectory", // Crear carpeta
      "d": "project_panel::Delete", // Borrar
      "r": "project_panel::Rename", // Renombrar
      "y": "project_panel::CopyRelativePath", // Copiar ruta
      "enter": "project_panel::OpenPermanent", // Abrir archivo

      // Navegaci贸n con hjkl
      "h": "project_panel::CollapseSelectedEntry",
      "l": "project_panel::ExpandSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious"
    }
  }
]
