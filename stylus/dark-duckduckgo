        --wine-red: #5e1a1a; /* Tu Rojo Vino de WhatsApp */
        --base: #050505;
        --mantle: #010101;
        --crust: #000000;
        --surface0: #121212;

        /* Mapeo de Variables de DuckDuckGo */
        --theme-bg: #000000 !important;
        --theme-main-bg: #000000 !important;
        --theme-header-bg: #000000 !important;
        --theme-sidebar-bg: var(--mantle) !important;
        
        /* Colores de Texto */
        --theme-text: var(--text) !important;
        --theme-link: var(--accent) !important;
        --theme-link-visited: #94e2d5 !important; /* Teal para visitados */
        --theme-url: var(--subtext) !important;
        
        /* Buscador y Botones */
        --theme-search-bg: var(--surface0) !important;
        --theme-search-border: #222 !important;
        --theme-button-bg: var(--wine-red) !important; /* Botón de búsqueda en Rojo Vino */
        --theme-button-text: #ffffff !important;
    }

    /* FORZADO OLED TOTAL */
    body, 
