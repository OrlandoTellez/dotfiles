        --yt-spec-general-background-a: var(--base) !important;
        --yt-spec-general-background-b: var(--base) !important;
        --yt-spec-menu-background: var(--surface0) !important;
        
        /* Texto */
        --yt-spec-text-primary: var(--text) !important;
        --yt-spec-text-secondary: #bac2de !important;
        
        /* Barra de búsqueda y elementos */
        --ytd-searchbox-background: var(--mantle) !important;
        --ytd-searchbox-legacy-border-color: var(--surface1) !important;
        --ytd-searchbox-legacy-button-border-color: var(--surface1) !important;
        
        /* Acento (Botón de suscripción, links, etc) */
        --yt-spec-call-to-action: var(--accent) !important;
        --yt-spec-static-brand-red: var(--accent) !important; /* Cambia el rojo de YT por tu acento */
