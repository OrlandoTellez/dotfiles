        --base: #050505;   /* Negro casi puro para el fondo */
        --mantle: #010101; /* Negro para barras laterales */
        --crust: #000000;  /* Negro absoluto */
        --surface0: #121212;
        --surface1: #1a1a1a;

        /* Mapeo de Variables de YouTube */
        --yt-spec-base-background: #000000 !important;
